$("ul.errors").html("")
<% if @errors.present? %>
    <% @errors.each do |e| %>
        $('ul.errors').append($('<li />').html("<%= e.html_safe %>"))
    <% end %>
<% else %>
    $("#my-modal").modal("hide")
    $("#cart-items-count").text(<%= cart_size %> );
    $("#login-info-cart-size").text( <%= cart_size %> );
    $("#login-info-cart-sum").text( <%= current_cart.reload.price_sum %> );

    toastr.success('Towar zosta≈Ç dodany do koszyka','', {"closeButton": true});

<% end %>