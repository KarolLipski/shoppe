.panel-heading
  %h4.panel-title
    %a{"data-parent" => "#accordian", "data-toggle" => "collapse", :href => "#"+category[:category].name.gsub(' ','')}
      %span.badge.pull-right
        %i.fa.fa-plus
      = category[:category].name+" (#{category[:category].items_count})"
  .panel-collapse.collapse{:id => category[:category].name.gsub(' ','')}
    .panel-body
      %ul
        - category[:subcategories].each do |sub_cat|
          %li
            = link_to category_name_with_count(sub_cat), [sub_cat, :items]