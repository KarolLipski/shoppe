- if @menu.has_offer
  %ul.nav.nav-tabs.bordered
    %li.active
      %a{"data-toggle" => "tab", :href => "#category_tab"} Magazyn
    %li
      %a{"data-toggle" => "tab", :href => "#offer_tab"}
        = @menu.offer.name
  #accordian.panel-group.category-products
    .tab-content
      #category_tab.tab-pane.active
        - @menu.magazine_categories.each do |category|
          .panel.panel-default
            - if category[:subcategories].empty?
              = render 'layouts/frontend/menu/node', category: category, type: 'mag'
            - else
              = render 'layouts/frontend/menu/collapsed_node', category: category, type: 'mag'
      #offer_tab.tab-pane
        - @menu.offer_categories.each do |category|
          .panel.panel-default
            - if category[:subcategories].empty?
              = render 'layouts/frontend/menu/node', category: category, type: 'offer'
            - else
              = render 'layouts/frontend/menu/collapsed_node', category: category, type: 'offer'
- else
  #accordian.panel-group.category-products
    - @menu.magazine_categories.each do |category|
      .panel.panel-default
        - if category[:subcategories].empty?
          = render 'layouts/frontend/menu/node', category: category, type: 'mag'
        - else
          = render 'layouts/frontend/menu/collapsed_node', category: category, type: 'mag'
