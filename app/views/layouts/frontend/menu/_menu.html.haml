- @categories.each do |category|
  .panel.panel-default
    .panel-heading
      %h4.panel-title
        %a{"data-parent" => "#accordian", "data-toggle" => "collapse", :href => "#"+category.name}
          %span.badge.pull-right
            %i.fa.fa-plus
          = category.name
    .panel-collapse.collapse{:id => category.name}
      .panel-body
        %ul
          - category.subcategories.each do |sub_cat|
            %li
              = link_to sub_cat.name, [sub_cat, :items]