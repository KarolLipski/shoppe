- @categories.each do |category|
  .panel.panel-default
    - if category.subcategories.empty?
      = render 'layouts/frontend/menu/node', category: category
    - else
      = render 'layouts/frontend/menu/collapsed_node', category: category
%p kategorie oferty

- @categories.each do |category|
  - if category.subcategories.empty? && @offer_categories.include?(category.id)
    .panel.panel-default
      .panel-heading
        %h4.panel-title
          = link_to category_name_with_count(category), [category, :items]
  - elsif @offer_categories.include?(category.id)
    .panel.panel-default
      .panel-heading
        %h4.panel-title
          %a{"data-parent" => "#accordian", "data-toggle" => "collapse", :href => "#offer_"+category.name.gsub(' ','')}
            %span.badge.pull-right
              %i.fa.fa-plus
            = category.name
        .panel-collapse.collapse{:id => "offer_"+category.name.gsub(' ','')}
          .panel-body
            %ul
              - category.subcategories.each do |sub_cat|
                - if @offer_categories.include?(sub_cat.id)
                  %li
                    = link_to category_name_with_count(sub_cat), [sub_cat, :items]
