%aside.col-left.sidebar.col-sm-3.col-xs-12.col-sm-pull-9.wow.bounceInUp.animated
  .side-nav-categories
    .block-title Kategorie
    .box-content.box-category
      %ul#magicat
        - @menu.magazine_categories.each do |category|
          - if category[:subcategories].empty?
            = render 'layouts/frontend/menu/node', category: category
          - else
            = render 'layouts/frontend/menu/collapsed_node', category: category
