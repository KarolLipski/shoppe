  .block.block-subscribe
    .block-title Newsletter
    %form#newsletter-validate-detail{:action => "http://www.magikcommerce.com//newsletter/subscriber/new/", :method => "post"}
      .block-content
        .form-subscribe-header Sign up for our newsletter:
        %input#newsletter.input-text.required-entry.validate-email{:name => "email", :placeholder => "Enter your email address", :title => "", :type => "text"}
          .actions
            %button.button.button-subscribe{:title => "Submit", :type => "submit"}
              %span Subscribe
  .block.block-compare
    .block-title Compare Products (2)
    .block-content
      %ol#compare-items
        %li.item.odd
          %input.compare-item-id{:type => "hidden", :value => "2173"}
            %a.btn-remove1{:href => "#", :title => "Remove This Item"}
            %a.product-name{:href => "#"} Sofa with Box-Edge Polyester Wrapped Cushions
        %li.item.last.even
          %input.compare-item-id{:type => "hidden", :value => "2174"}
            %a.btn-remove1{:href => "#", :title => "Remove This Item"}
            %a.product-name{:href => "#"} Sofa with Box-Edge Down-Blend Wrapped Cushions
      .ajax-checkout
        %button.button.button-compare{:title => "Submit", :type => "submit"}
          %span Compare
