%header.header
  .container
    .row
      .col-lg-5.col-sm-4.col-md-5
        / Header Logo
        = link_to root_path do
          = image_tag('logos/madej.png', width: "85px")
      / End Header Logo
      .col-lg-7.col-sm-8.col-md-7.col-xs-12
        .header-top
          .welcome-msg.hidden-xs
            = welcome_message
          / Header Language
          .dropdown.block-language-wrapper
            %a.block-language.dropdown-toggle{"data-target" => "#", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              = image_tag('amaze/polish.png')
              Polski
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li{:role => "presentation"}
                %a{:href => "#", :role => "menuitem", :tabindex => "-1"}
                  = image_tag('amaze/polish.png')
                  Polski
          / End Header Language
          / Header Top Links
          .toplinks
            .links
              .myaccount
                %a{:href => "#", :title => "My Account"}
                  %span.hidden-xs Moje konto
              .wishlist
                %a{:href => "#", :title => "My Wishlist"}
                  %span.hidden-xs Ulubione
              .login
                - if logged_in?
                  = link_to(logout_path) do
                    %span.hidden-xs Wyloguj
                - else
                  = link_to(login_path) do
                    %span.hidden-xs Logowanie
        / End Header Top Links
        .cart_cur_block
          / Header Currency
          / Top Cart
          .top-cart-contain
            .mini-cart
              .basket.dropdown-toggle{"data-hover" => "dropdown", "data-toggle" => "dropdown"}
                %a{:href => "#"}
                  %span.hidden-xs Koszyk (3)
              %div
                .top-cart-content.arrow_box{:style => "display: none;"}
                  .block-subtitle Recently added item(s)
                  %ul#cart-sidebar.mini-products-list
                    %li.item.odd
                      %a.product-image{:href => "product_detail.html", :title => "Skater Dress In Leaf Print"}
                        = image_tag('amaze/product1.jpg', width: 55)
                      .product-details
                        %a.btn-remove1{:href => "#", :onClick => "", :title => "Remove This Item"} Remove This Item
                        %a.btn-edit{:href => "#", :title => "Edit item"} Edit item
                        %p.product-name
                          %a{:href => "product_detail.html"} Sample Product
                        %strong 1
                        x
                        %span.price $20.00
                    %li.item.even
                      %a.product-image{:href => "product_detail.html", :title => "Product layout: large content"}
                        = image_tag('amaze/product1.jpg', width: 55)
                      .product-details
                        %a.btn-remove1{:href => "#", :onClick => "", :title => "Remove This Item"} Remove This Item
                        %a.btn-edit{:href => "#", :title => "Edit item"} Edit item
                        %p.product-name
                          %a{:href => "product_detail.html"} Sample Product
                        %strong 1
                        x
                        %span.price $230.00
                    %li.item.last.odd
                      %a.product-image{:href => "product_detail.html", :title => "Skater Dress In Leaf Print"}
                        = image_tag('amaze/product1.jpg', width: 55)
                      .product-details
                        %a.btn-remove1{:href => "#", :onClick => "", :title => "Remove This Item"} Remove This Item
                        %a.btn-edit{:href => "#", :title => "Edit item"} Edit item
                        %p.product-name
                          %a{:href => "product_detail.html"} Sample Product
                        %strong 2
                        x
                        %span.price $420.00
                  .top-subtotal
                    Subtotal:
                    %span.price $520.00
                  .actions
                    %button.btn-checkout{:type => "button"}
                      %span Checkout
                    %button.view-cart{:type => "button"}
                      %span View Cart