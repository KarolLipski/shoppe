        %span Kategorie Towarów
      %ul
        %li
          %a{:href => new_admin_category_path}
            %i.entypo-plus
            %span Dodaj Nową
        %li
          %a{:href => admin_categories_path}
            %i.entypo-flow-tree
            %span Drzewo Kategorii
    %li
      %a{:href => ""}
        %i.entypo-layout
        %span Towary
