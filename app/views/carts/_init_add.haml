.modal-dialog
  .modal-content
    .modal-header
      %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
        %span{"aria-hidden" => "true"}
          ×
      %h4.modal-title.title-orange
        Dodaj do koszyka
    .modal-body
      = form_tag(cart_items_path, remote: true, class: 'form-horizontal form-groups-bordered')
      = token_tag(nil)
      .row
        .col-md-6
          %p.cart-product-title= @item.name
          %p.cart-product-data
            %span.cart-product-label
              Numer:
            = @item.number
          %p.cart-product-data
            %span.cart-product-label
              Pakowanie:
            = "#{@item.big_wrap}/#{@item.small_wrap}"
          %p.cart-product-price
            %span.cart-product-pricelabel
              Cena:
            = render_price(@item)
        .col-md-6
          = image_tag @item.photo.url(:mini)
      .row{style:'margin-top: 20px;'}
        %div{class: 'col-md-7 form-group' }
          = label_tag 'quantity', 'Ilość:', class: 'col-md-2 control-label'
          .col-md-4
            = text_field_tag 'quantity',@quantity, class: 'col-md-3 form-control'
            = hidden_field_tag 'item_id', @item.id
          .col-md-3
            = submit_tag 'Dodaj', class: 'btn btn-success'
      .row
        %ul.errors
    .modal-footer
      %button.btn.btn-danger{"data-dismiss" => "modal", :type => "button"} Anuluj
