#cart_items
  %p
    = "W koszyku: #{@items.length} produktów"
    %br
    = "Suma : #{@cart.price_sum} zł."
  .table-responsive.cart_info
    %table.table.table-condensed
      %thead
        %tr.cart_menu
          %td.image Produkt
          %td.description
          %td.description Pakowanie
          %td.price Cena
          %td.quantity Ilość
          %td.total Suma
          %td
      %tbody
        - @items.each do |cart_item|
          %tr
            %td.cart_product
              = image_tag(cart_item.item.photo.url(:mini), height:66, width:100)
            %td.cart_description
              %h4
                %a{:href => ""}
                  = cart_item.item.name
              %p
                = cart_item.item.number
            %td.cart_description
              %p
                = "#{cart_item.item.big_wrap} / #{cart_item.item.small_wrap}"
            %td.cart_price
              %p= render_price(cart_item.item)
            %td.cart_quantity
              %input.cart_quantity_input{:autocomplete => "off", :name => "quantity", :size => "2", :type => "text", :cart_item_id => cart_item.id, :value => cart_item.quantity}/
            %td.cart_total
              %p.cart_total_price
                = "#{cart_item.quantity * cart_item.item.price} zł"
            %td.cart_delete
              %a.cart_quantity_delete{:href => ""}
                %i.fa.fa-times