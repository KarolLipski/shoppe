%li
  %span
    = category.name
  %a{:href=> edit_admin_category_path(category),class: 'btn btn-primary btn-xs' }
    %i{class: 'fa fa-pencil', title: 'Edycja'}
  - unless category.parent_id
    %ul
      - category.subcategories.each do |cat|
        = render 'admin/categories/node', category: cat
