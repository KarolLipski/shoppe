= form_for [:admin,@offer], :html => {class: 'form-horizontal form-groups-bordered'} do |f|

  %div{class: field_class(@offer,:name) }
    = f.label :name, 'Nazwa', class: 'col-sm-3 control-label'
    .col-sm-5
      = f.text_field :name, class: 'form-control'
      = render_error_message(@offer, :name)
  %div{class: field_class(@offer,:start_date) }
    = f.label :start_date, 'Data startu', class: 'col-sm-3 control-label'
    .col-sm-5
      = f.text_field :start_date, class: 'form-control'
      = render_error_message(@offer, :start_date)
  %div{class: field_class(@offer,:end_date) }
    = f.label :end_date, 'Data ko≈Ñca', class: 'col-sm-3 control-label'
    .col-sm-5
      = f.text_field :end_date, class: 'form-control'
      = render_error_message(@offer, :end_date)
  .form-group
    .col-sm-offset-3.col-sm-5
      = f.submit 'Zapisz', class: 'btn btn-success'
