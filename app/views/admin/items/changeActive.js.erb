var button = $("#change-active-<%= @item.id %>");
<% if @item.active %>
    button.text('Aktywny');
    button.attr("href", '<%= admin_item_url(@item, item:{active: 0}) %>');
    button.removeClass('btn-danger');
    button.addClass('btn-success');
<% else %>
    button.text('Nieaktywny');
    button.attr("href", '<%= admin_item_url(@item, item:{active: 1}) %>');
    button.removeClass('btn-success');
    button.addClass('btn-danger');
<% end %>

toastr.success('Aktywność została zmieniona','', {"closeButton": true});