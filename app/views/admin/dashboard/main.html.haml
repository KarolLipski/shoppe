  		{
  			ev.preventDefault();
  			
  			if($.trim($(this).val()).length)
  			{
  				var $todo_entry = $('<li><div class="checkbox checkbox-replace color-white"><input type="checkbox" /><label>'+$(this).val()+'</label></div></li>');
